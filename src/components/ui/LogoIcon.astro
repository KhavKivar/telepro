---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<div class={className}>
  <svg
    viewBox="0 0 100 100"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    class="relative z-10 w-full h-full drop-shadow-2xl"
  >
    <!-- Outer Signal Wave -->
    <path
      d="M85 50C85 30.67 69.33 15 50 15C30.67 15 15 30.67 15 50"
      stroke="url(#grad1)"
      stroke-width="6"
      stroke-linecap="round"
      class="animate-pulse"
      style="animation-duration: 3s"></path>
    <!-- Middle Signal Wave -->
    <path
      d="M72 50C72 37.85 62.15 28 50 28C37.85 28 28 37.85 28 50"
      stroke="url(#grad2)"
      stroke-width="6"
      stroke-linecap="round"
      class="animate-pulse"
      style="animation-duration: 2.5s; animation-delay: 0.2s"></path>
    <!-- Inner Signal Wave -->
    <path
      d="M60 50C60 44.47 55.53 40 50 40C44.47 40 40 44.47 40 50"
      stroke="url(#grad3)"
      stroke-width="6"
      stroke-linecap="round"
      class="animate-pulse"
      style="animation-duration: 2s; animation-delay: 0.4s"></path>
    <!-- Antenna Tower Base -->
    <path
      d="M40 85L50 45L60 85H40Z"
      fill="white"
      stroke="white"
      stroke-width="2"
      stroke-linejoin="round"></path>
    <!-- Antenna Tip -->
    <circle cx="50" cy="45" r="5" fill="#38bdf8"></circle>
    <!-- Base Glow -->
    <rect
      x="35"
      y="80"
      width="30"
      height="8"
      rx="4"
      fill="url(#grad4)"
      opacity="0.5"></rect>
    <defs>
      <linearGradient
        id="grad1"
        x1="15"
        y1="30"
        x2="85"
        y2="30"
        gradientUnits="userSpaceOnUse"
      >
        <stop stop-color="#0ea5e9"></stop>
        <stop offset="1" stop-color="#38bdf8"></stop>
      </linearGradient>
      <linearGradient
        id="grad2"
        x1="28"
        y1="35"
        x2="72"
        y2="35"
        gradientUnits="userSpaceOnUse"
      >
        <stop stop-color="#38bdf8"></stop>
        <stop offset="1" stop-color="#7dd3fc"></stop>
      </linearGradient>
      <linearGradient
        id="grad3"
        x1="40"
        y1="45"
        x2="60"
        y2="45"
        gradientUnits="userSpaceOnUse"
      >
        <stop stop-color="#7dd3fc"></stop>
        <stop offset="1" stop-color="white"></stop>
      </linearGradient>
      <linearGradient
        id="grad4"
        x1="35"
        y1="80"
        x2="65"
        y2="88"
        gradientUnits="userSpaceOnUse"
      >
        <stop stop-color="#0ea5e9"></stop>
        <stop offset="1" stop-color="transparent"></stop>
      </linearGradient>
    </defs>
  </svg>
</div>
