---
import clsx from "clsx";
import Button from "./button.astro";
---

<div
  class="flex flex-col items-start border-border hover:border-accent-border border rounded-md gap-2 p-4 hover:scale-105
  transition-scale duration-300 pb-20 bg-background z-0"
>
  <div class="flex gap-2 items-center">
    <div class="bg-accent/10 rounded-lg p-2">
      <slot name="icon" />
    </div>
    <div class="text-2xl font-bold"><slot name="title" /></div>
  </div>
  <div class="text-muted">
    <slot name="content" />
  </div>
</div>
