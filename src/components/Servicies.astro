---
import Card from "./ui/card.astro";
import { Shield, Globe, Code } from "@lucide/astro";

const allServices = [
  {
    title: "Servicios Limitados",
    icon: Shield,
    items: [
      "Proyectos de Radiocomunicaciones para obtención de frecuencias VHF, UHF y HF",
      "Proyectos de Repetidores (Estudio de Zona de Servicio)",
      "Proyectos de Televisión por Cable (coaxial o fibra óptica)",
      "Regularización de enlaces inalámbricos Punto a Punto en bandas 2.4 GHz, 5 GHz y otras",
      "Regularización y permisos para sistemas de video vigilancia con enlaces de microondas",
    ],
  },
  {
    title: "Servicios Públicos",
    icon: Globe,
    items: [
      "Servicios Públicos de Transmisión de datos inalámbricos en bandas de 2,4 GHz, 5 GHz y otras",
      "Servicios Públicos de Transmisión de datos por medio de fibra óptica o cable (FTTH o HFC)",
    ],
  },
  {
    title: "Servicios Intermedios",
    icon: Code,
    items: ["Servicios Intermedios de Transmisión de datos"],
  },
];
---

<section
  id="Services"
  class="flex flex-col items-center py-20 sm:py-24 lg:py-28"
>
  <div class="text-center">
    <h2 class="text-5xl font-bold mb-4">
      Tramites <span class="text-accent">Subtel</span>
    </h2>
    <div class="text-lg">
      Gestión eficaz y aprobación garantizada ante la Subsecretaría de
      Telecomunicaciones.
    </div>
  </div>
  <div class="mt-12 grid w-[92%] max-w-7xl grid-cols-1 gap-8 md:grid-cols-3">
    {
      allServices.map((service, index) => (
        <Card highlighted={index === 0}>
          <service.icon slot="icon" size={24} />
          <span slot="title">{service.title}</span>
          <div slot="content" class="space-y-4">
            {service.items.map((item) => (
              <div class="flex gap-3">
                <span class="text-accent font-bold shrink-0 mt-1">•</span>
                <p class="leading-relaxed font-medium text-sm sm:text-base">
                  {item}
                </p>
              </div>
            ))}
          </div>
        </Card>
      ))
    }
  </div>
</section>
