---
import Card from "./ui/card.astro";
import { Shield, Globe, Code } from "@lucide/astro";

const allServices = [
  {
    title: "Servicios Limitados",
    icon: Shield,
    items: [
      "Obtención de frecuencias UHF y VHF ante Subtel",
      "Proyectos Subtel de radiocomunicaciones para trámites de frecuencias",
      "Estudios de Zona de Servicio para Repetidores",
      "Proyectos de Televisión por Cable (coaxial o fibra óptica)",
      "Regularización de enlaces en microondas e inalámbricos",
    ],
  },
  {
    title: "Servicios Públicos",
    icon: Globe,
    items: [
      "Servicios Públicos de Transmisión de datos inalámbricos en bandas de 2,4 GHz, 5 GHz y otras",
      "Servicios Públicos de Transmisión de datos mediante sistemas FTTH o HFC",
    ],
  },
  {
    title: "Servicios Intermedios",
    icon: Code,
    items: ["Servicios Intermedios de Transmisión de datos"],
  },
];
---

<section
  id="Services"
  class="relative z-10 flex flex-col items-center overflow-hidden border-y border-slate-100 bg-slate-50 py-16 lg:py-14 2xl:py-20 2xl:[@media(max-height:850px)]:py-10"
>
  <div class="pointer-events-none absolute inset-0 opacity-40">
    <div
      class="absolute top-1/4 left-[-10%] h-[40%] w-[40%] rounded-full bg-sky-100 blur-[120px]"
    >
    </div>
    <div
      class="absolute right-[-10%] bottom-1/4 h-[40%] w-[40%] rounded-full bg-blue-50 blur-[100px]"
    >
    </div>
  </div>

  <div
    class="relative z-10 mx-auto mb-10 text-center lg:mb-8 2xl:mb-12 2xl:[@media(max-height:850px)]:mb-6"
  >
    <h2
      class="text-foreground mb-3 text-[clamp(2.5rem,4vw,3.5rem)] font-extrabold tracking-tight 2xl:[@media(max-height:850px)]:mb-2 2xl:[@media(max-height:850px)]:text-4xl"
    >
      Tramites <span
        class="bg-gradient-to-r from-sky-600 to-blue-500 bg-clip-text text-transparent"
        >Subtel</span
      >
    </h2>

    <div class="text-base font-medium text-slate-600 md:text-lg">
      Gestión eficaz y aprobación garantizada ante la Subsecretaría de
      Telecomunicaciones.
    </div>
  </div>

  <div
    class="relative z-10 mt-2 grid w-[92%] max-w-7xl grid-cols-1 gap-6 md:grid-cols-3 2xl:gap-8 2xl:[@media(max-height:850px)]:gap-4"
  >
    <div
      class="pointer-events-none absolute top-1/2 left-1/2 -z-10 h-[80%] w-[80%] -translate-x-1/2 -translate-y-1/2 rounded-full bg-sky-100/50 blur-[120px]"
    >
    </div>

    {
      allServices.map((service, index) => (
        <Card highlighted={index === 0}>
          <service.icon slot="icon" size={24} />
          <span slot="title">{service.title}</span>
          <div slot="content" class="space-y-3">
            {service.items.map((item) => (
              <div class="flex gap-3">
                <span class="mt-0.5 shrink-0 font-bold text-sky-600">•</span>
                <p class="text-sm leading-relaxed font-medium text-slate-600 sm:text-base 2xl:[@media(max-height:850px)]:text-sm 2xl:[@media(max-height:850px)]:leading-snug">
                  {item}
                </p>
              </div>
            ))}
          </div>
        </Card>
      ))
    }
  </div>
</section>
