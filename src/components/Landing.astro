---
import Navbar from "./ui/navbar.astro";
import Button from "./ui/button.astro";
import BackgroundImage from "../assets/wep4.jpeg";
import { Image } from "astro:assets";

const description =
  "Expertos en la obtención de frecuencias UHF y VHF. Gestión integral de proyectos Subtel, regularización de enlaces en microondas y trámites ante la Subsecretaría de Telecomunicaciones para Servicios Limitados";
---

<section
  id="Home"
  class="relative z-10 flex h-[100dvh] min-h-[600px] w-full items-center overflow-hidden text-left"
>
  <div
    class="pointer-events-none absolute inset-0 z-0 h-full w-full overflow-hidden"
  >
    <div class="absolute inset-0 h-full w-full md:right-0 md:left-1/2 md:w-1/2">
      <Image
        src={BackgroundImage}
        alt="Background"
        loading="eager"
        fetchpriority="high"
        format="webp"
        class="absolute inset-0 h-full w-full object-cover object-center opacity-100 md:[mask-image:linear-gradient(to_right,transparent,black_30%)] md:opacity-90"
      />

      <div class="absolute inset-0 bg-black/50 md:hidden"></div>
    </div>
  </div>

  <div
    class="relative z-20 mx-auto mt-20 w-full px-5 md:mt-0 md:w-[95%] lg:max-w-7xl"
  >
    <div class="flex flex-col gap-8 md:w-[65%] lg:w-[50%]">
      <h1
        class="md:text-foreground text-6xl leading-[1.1] font-extrabold tracking-tight text-white drop-shadow-xl sm:text-[clamp(2.25rem,5vw+1rem,4.5rem)] md:drop-shadow-sm"
      >
        Proyectos y Trámites <br class="hidden xl:block" />
        <span
          class="bg-gradient-to-r from-sky-400 to-blue-300 bg-clip-text text-transparent drop-shadow-none md:from-sky-600 md:to-blue-500"
          >Subtel</span
        >
      </h1>

      <p
        class="max-w-2xl text-xl leading-relaxed font-medium text-white/95 drop-shadow-md sm:text-[clamp(1.1rem,1.5vw+0.5rem,1.35rem)] md:text-slate-600 md:drop-shadow-none"
      >
        {description}
      </p>

      <div class="mt-2 hidden flex-col gap-3 sm:flex sm:flex-row sm:gap-4">
        <Button
          href="#Contact"
          class="w-full rounded-xl bg-sky-600 px-8 py-4 text-lg font-semibold text-white shadow-lg shadow-sky-900/20 transition-all hover:scale-[1.02] hover:bg-sky-700 sm:w-auto sm:py-5 md:block md:shadow-sky-600/20"
        >
          Contáctanos ahora
        </Button>
        <Button
          href="#Services"
          class="w-full rounded-xl border border-white/20 bg-white/10 px-8 py-4 text-lg font-semibold text-white shadow-sm backdrop-blur-md transition-all hover:bg-white/20 sm:block sm:w-auto sm:py-5 md:border-slate-200 md:bg-white md:text-slate-700 md:hover:border-slate-300 md:hover:bg-slate-50"
        >
          Ver servicios
        </Button>
      </div>
    </div>
  </div>
</section>
