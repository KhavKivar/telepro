---
import Navbar from "./ui/navbar.astro";
import Button from "./ui/button.astro";
import BackgroundImage from "../assets/wep4.jpeg";
import { Image } from "astro:assets";
const description =
  "Expertos en la obtención de frecuencias UHF y VHF. Gestión integral de proyectos Subtel, regularización de enlaces en microondas y trámites ante la Subsecretaría de Telecomunicaciones para Servicios Limitados y Radiodifusión.";
---

<section
  id="Home"
  class="relative z-10 flex h-[100dvh] min-h-[600px] w-full items-center overflow-hidden text-left"
>
  <!-- Image on the right side on desktop, subtle overlay on mobile -->
  <div
    class="pointer-events-none absolute inset-0 z-0 h-full w-full overflow-hidden"
  >
    <div class="bg-background/80 absolute inset-0 z-10 md:bg-transparent"></div>
    <div class="absolute top-0 right-0 hidden h-full w-1/2 md:block">
      <Image
        src={BackgroundImage}
        alt="Background"
        loading="eager"
        fetchpriority="high"
        format="webp"
        class="absolute inset-0 h-full w-full [mask-image:linear-gradient(to_right,transparent,black_30%)] object-cover object-center opacity-90"
      />
    </div>
  </div>

  <div
    class="relative z-20 mx-auto mt-20 w-full px-4 md:mt-0 md:w-[95%] lg:max-w-7xl"
  >
    <div class="flex flex-col gap-8 md:w-[65%] lg:w-[50%]">
      <h1
        class="text-foreground text-[clamp(2rem,4vw+1rem,4.5rem)] leading-[1.1] font-extrabold tracking-tight drop-shadow-sm"
      >
        Proyectos y Trámites <br class="hidden xl:block" />
        <span
          class="bg-gradient-to-r from-sky-600 to-blue-500 bg-clip-text text-transparent"
          >Subtel</span
        >
      </h1>

      <p
        class="max-w-2xl text-[clamp(1.125rem,1.5vw+0.5rem,1.35rem)] leading-relaxed font-medium text-slate-600"
      >
        {description}
      </p>

      <div class="mt-2 flex flex-col gap-4 sm:flex-row">
        <Button
          href="#Contact"
          class="w-full rounded-xl bg-sky-600 px-8 py-4 text-lg font-semibold text-white shadow-lg shadow-sky-600/20 transition-all hover:scale-[1.02] hover:bg-sky-700 sm:w-auto sm:py-5"
        >
          Contáctanos ahora
        </Button>
        <Button
          href="#Services"
          class="w-full rounded-xl border border-slate-200 bg-white px-8 py-4 text-lg font-semibold text-slate-700 shadow-sm transition-all hover:border-slate-300 hover:bg-slate-50 hover:text-slate-900 sm:w-auto sm:py-5"
        >
          Ver servicios
        </Button>
      </div>
    </div>
  </div>
</section>
