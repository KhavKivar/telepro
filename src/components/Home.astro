---
import Servicies from "@/components/Servicies.astro";
import Landing from "@/components/Landing.astro";
import About from "@/components/About.astro";
import Contact from "@/components/Contact.astro";
import Footer from "@/components/Footer.astro";
import "@/styles/global.css";
import Navbar from "./ui/navbar.astro";
---

<div
  class="bg-background text-foreground selection:bg-accent/20 selection:text-accent relative min-h-screen font-sans antialiased"
>
  <!-- Modern Light UI Background Grid & Soft Gradients -->
  <div class="pointer-events-none fixed inset-0 z-[-2] h-full w-full bg-white">
  </div>
  <div
    class="pointer-events-none fixed inset-0 z-[-1] bg-[linear-gradient(to_right,#f1f5f9_1px,transparent_1px),linear-gradient(to_bottom,#f1f5f9_1px,transparent_1px)] [mask-image:radial-gradient(ellipse_80%_80%_at_50%_0%,#000_70%,transparent_100%)] bg-[size:3rem_3rem] opacity-80"
  >
  </div>

  <!-- Subtle glowing accent orbs for depth -->
  <div
    class="pointer-events-none fixed top-0 left-1/4 -z-10 h-96 w-96 -translate-y-1/2 rounded-full bg-sky-200/40 blur-[120px]"
  >
  </div>
  <div
    class="pointer-events-none fixed top-1/2 right-0 -z-10 h-[500px] w-[500px] translate-x-1/4 -translate-y-1/2 rounded-full bg-blue-100/40 blur-[100px]"
  >
  </div>

  <!-- Header Section (Floating "Pill" Navbar on Desktop) -->
  <header
    class="fixed inset-x-0 top-0 z-50 flex w-full justify-center pt-0 transition-all duration-300 md:pt-6"
  >
    <div class="w-full px-0 md:w-[95%] md:px-4 lg:max-w-7xl">
      <div
        class="relative w-full border-none border-slate-200/60 bg-white/80 shadow-sm ring-1 ring-black/5 backdrop-blur-xl transition-all md:rounded-2xl md:border md:bg-white/60 md:shadow-md"
      >
        <Navbar />
      </div>
    </div>
  </header>

  <main class="relative z-0 flex w-full flex-col">
    <Landing />
    <Servicies />
    <About />
    <Contact />
  </main>

  <Footer />
</div>
